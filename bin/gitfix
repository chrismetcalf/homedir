#!/bin/bash

PATH=$HOME/.homedir/bin:$PATH

pushd $HOME

echo "Setting up .ssh directory"
if [[ ! -d .ssh ]]; then
  echo ".ssh doesn't exist yet, creating..."
  mkdir .ssh
fi
dircombine '.*' .ssh $HOME/.homedir/.ssh

echo "Linking in .dotfiles..."
dircombine '.*' . $HOME/.homedir

echo "Done!"
popd
