<?xml version="1.0" encoding="UTF-8"?>
<root>
   <item>
     <name>Fake Boson</name>
     <identifier>private.boson</identifier>
     <!-- Only for Apple keyboards -->
     <device_only>DeviceVendor::APPLE_COMPUTER, DeviceProduct::ANY</device_only>

     <!-- Remap command keys to Up and Down -->
     <autogen>__KeyToKey__ KeyCode::COMMAND_L,  KeyCode::VK_CONFIG_SYNC_KEYDOWNUP_notsave_boson_up</autogen>
     <autogen>__KeyToKey__ KeyCode::COMMAND_R,  KeyCode::VK_CONFIG_SYNC_KEYDOWNUP_notsave_boson_down</autogen>

     <!-- Remap Modifier Keys -->
     <autogen>__KeyToKey__ KeyCode::CAPSLOCK,   KeyCode::CONTROL_L</autogen>
     <autogen>__KeyToKey__ KeyCode::OPTION_L,   KeyCode::COMMAND_L</autogen>
     <autogen>__KeyToKey__ KeyCode::CONTROL_L,  KeyCode::OPTION_L</autogen>
     <autogen>__KeyToKey__ KeyCode::OPTION_R,   KeyCode::CONTROL_R</autogen>
     <autogen>__KeyToKey__ KeyCode::FN,         KeyCode::ESCAPE</autogen>

     <!-- We put enter on the home row -->
     <autogen>__KeyToKey__ KeyCode::SEMICOLON,  KeyCode::ENTER</autogen>
     <autogen>__KeyToKey__ KeyCode::QUOTE,      KeyCode::ENTER</autogen>
   </item>

   <!-- UP -->
   <item hidden="true">
     <identifier vk_config="true">notsave.boson_up</identifier>
     <autogen>__ShowStatusMessage__ Up!</autogen>

     <!-- Top Row -->
     <autogen>__KeyToKey__ KeyCode::TAB,        KeyCode::BACKQUOTE</autogen>
     <autogen>__KeyToKey__ KeyCode::Q,          KeyCode::1</autogen>
     <autogen>__KeyToKey__ KeyCode::W,          KeyCode::2</autogen>
     <autogen>__KeyToKey__ KeyCode::E,          KeyCode::3</autogen>
     <autogen>__KeyToKey__ KeyCode::R,          KeyCode::4</autogen>
     <autogen>__KeyToKey__ KeyCode::T,          KeyCode::5</autogen>
     <autogen>__KeyToKey__ KeyCode::Y,          KeyCode::6</autogen>
     <autogen>__KeyToKey__ KeyCode::U,          KeyCode::7</autogen>
     <autogen>__KeyToKey__ KeyCode::I,          KeyCode::8</autogen>
     <autogen>__KeyToKey__ KeyCode::O,          KeyCode::9</autogen>
     <autogen>__KeyToKey__ KeyCode::P,          KeyCode::0</autogen>

     <!-- Middle Row -->
     <autogen>__KeyToKey__ KeyCode::S,          KeyCode::MINUS</autogen>
     <autogen>__KeyToKey__ KeyCode::D,          KeyCode::EQUAL</autogen>
     <autogen>__KeyToKey__ KeyCode::F,          KeyCode::BACKSLASH</autogen>
     <autogen>__KeyToKey__ KeyCode::G,          KeyCode::SLASH</autogen>
     <autogen>__KeyToKey__ KeyCode::H,          KeyCode::BRACKET_LEFT</autogen>
     <autogen>__KeyToKey__ KeyCode::J,          KeyCode::BRACKET_RIGHT</autogen>
     <autogen>__KeyToKey__ KeyCode::K,          KeyCode::SEMICOLON</autogen>
     <autogen>__KeyToKey__ KeyCode::L,          KeyCode::QUOTE</autogen>

     <!-- Bottom Row -->
     <autogen>__KeyToKey__ KeyCode::SLASH,      KeyCode::SHIFT_R</autogen>
   </item>

   <item hidden="true">
     <identifier vk_config="true">notsave.boson_down</identifier>
     <autogen>__ShowStatusMessage__ Down!</autogen>

     <!-- Top Row -->
     <autogen>__KeyToKey__ KeyCode::Q,          KeyCode::VK_MOUSEKEY_BUTTON_LEFT</autogen>
     <autogen>__KeyToKey__ KeyCode::W,          KeyCode::VK_MOUSEKEY_UP</autogen>
     <autogen>__KeyToKey__ KeyCode::E,          KeyCode::VK_MOUSEKEY_BUTTON_RIGHT</autogen>
     <autogen>__KeyToKey__ KeyCode::R,          KeyCode::VK_MOUSEKEY_SCROLL_UP</autogen>

     <!-- Middle Row -->
     <autogen>__KeyToKey__ KeyCode::A,          KeyCode::VK_MOUSEKEY_LEFT</autogen>
     <autogen>__KeyToKey__ KeyCode::S,          KeyCode::VK_MOUSEKEY_DOWN</autogen>
     <autogen>__KeyToKey__ KeyCode::D,          KeyCode::VK_MOUSEKEY_RIGHT</autogen>
     <autogen>__KeyToKey__ KeyCode::F,          KeyCode::VK_MOUSEKEY_SCROLL_DOWN</autogen>

     <autogen>__KeyToKey__ KeyCode::H,          KeyCode::CURSOR_LEFT</autogen>
     <autogen>__KeyToKey__ KeyCode::J,          KeyCode::CURSOR_DOWN</autogen>
     <autogen>__KeyToKey__ KeyCode::K,          KeyCode::CURSOR_UP</autogen>
     <autogen>__KeyToKey__ KeyCode::L,          KeyCode::CURSOR_RIGHT</autogen>

     <!-- Bottom Row -->
     <autogen>__KeyToKey__ KeyCode::Z,          KeyCode::VK_CONSUMERKEY_MUSIC_PREV</autogen>
     <autogen>__KeyToKey__ KeyCode::X,          KeyCode::VK_CONSUMERKEY_MUSIC_PLAY</autogen>
     <autogen>__KeyToKey__ KeyCode::V,          KeyCode::VK_CONSUMERKEY_MUSIC_NEXT</autogen>

     <autogen>__KeyToKey__ KeyCode::COMMA,      KeyCode::BACKSLASH, ModifierFlag::COMMAND_L, ModifierFlag::SHIFT_L</autogen>
   </item>
</root>
